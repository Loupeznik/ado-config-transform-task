{
	"name": "configtransformtask",
	"version": "1.3.1",
	"description": "An opinionated task to transform configuration files of various formats",
	"main": "index.ts",
	"scripts": {
		"test": "mocha dist/tests/_suite.js --reporter spec",
		"build": "tsc",
		"build:dev": "npm install && npm run build",
		"build:prod": "npm install && npm run build && npm ci --omit=dev",
		"build:vsix": "npm run build:prod && cd ../../src && tfx extension create --manifest-globs vss-extension.json",
		"clean": "rm -rf dist node_modules",
		"lint": "biome lint .",
		"lint:fix": "biome lint --write .",
		"format": "biome format --write .",
		"check": "biome check .",
		"prepare": "cd ../.. && husky"
	},
	"keywords": [],
	"author": "Dominik Zarsky",
	"license": "MIT",
	"dependencies": {
		"azure-pipelines-task-lib": "^5.2.1",
		"js-yaml": "^4.1.0"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.4",
		"@types/js-yaml": "^4.0.9",
		"@types/mocha": "^10.0.9",
		"@types/node": "^20.19.19",
		"@types/q": "^1.5.8",
		"husky": "^9.1.7",
		"mocha": "^10.7.3",
		"sync-request": "^6.1.0",
		"typescript": "^5.9.2"
	}
}
